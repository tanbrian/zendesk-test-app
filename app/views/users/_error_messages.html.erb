<% if @user.errors.any? %>  
  <div id='error-explanation'>
    <div class='alert alert-error'>
      This form contains <%= pluralize(@user.errors.count, 'error') %>.
    </div>
    <div>
      <ul>
        <% @user.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>